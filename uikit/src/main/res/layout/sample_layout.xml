<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/absolute_white">

        <TextView
            android:id="@+id/digits"
            style="@style/digits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digits"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/big_title"
            style="@style/big_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Big Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/digits" />

        <TextView
            android:id="@+id/title"
            style="@style/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/big_title" />

        <TextView
            android:id="@+id/modal_title"
            style="@style/modal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modal Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/modal_title" />

        <TextView
            android:id="@+id/regular_text"
            style="@style/regular_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regular Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle" />

        <TextView
            android:id="@+id/bold_text"
            style="@style/bold_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bold Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/regular_text" />

        <TextView
            android:id="@+id/branch_cashback_caption"
            style="@style/branch_cashback_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Branch Cashback Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bold_text" />

        <TextView
            android:id="@+id/card_cashback_caption"
            style="@style/card_cashback_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Cashback Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/branch_cashback_caption" />

        <TextView
            android:id="@+id/regular_caption"
            style="@style/regular_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regular Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_cashback_caption" />

        <TextView
            android:id="@+id/rating_view_text"
            style="@style/rating_view_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating View Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/regular_caption" />

        <TextView
            android:id="@+id/amount_caption"
            style="@style/amount_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ammount Caption"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rating_view_text" />

        <TextView
            android:id="@+id/button_text"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/amount_caption" />

        <Button
            android:id="@+id/action_button"
            style="@style/action_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="action button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_text" />

        <Button
            android:id="@+id/payment_button"
            style="@style/payment_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="payment button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/action_button" />

        <Button
            android:id="@+id/payment_button2"
            style="@style/payment_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="simple dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/payment_button" />
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>
